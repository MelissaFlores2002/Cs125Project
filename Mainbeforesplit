int errorcheck(int ans, int x)
{
    if (ans>x)
    {
        printf("\n\nERROR, INPUT IS OUT OF BOUNDS.\n\n");
        return 1;
    }
    else 
    return 0;
}

void
openit ()
{
  char str[2000000];
  int x;
  x = 0;

  FILE *f1 = fopen("extrainfo.txt", "r");
  for (x = 0; x < 32; x++)
    {
      fgets(str, 2000000, f1);
      printf("%s", str);
    }
  fclose(f1);
}

void
openroom ()
{
  char str[2000000];
  int x;
  x = 0;

  FILE *f1 = fopen("rooms.txt", "r");
  for (x = 0; x < 8; x++)
    {
      fgets(str, 2000000, f1);
      printf("%s", str);
    }
  fclose(f1);
}

void
