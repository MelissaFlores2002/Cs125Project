	  while (again == 0)
	    {
	      printf("\n\nWho is the murderer: (please enter an integer)");
	      scanf("%d", &Guess.murderer);
	      c = userguess (Guess.murderer, murderer);

	      if (c == 0)
		{
		  again = 0;
		}
	      else
		{
		  printf("\nWould you like to try again? (0 for yes, 1 for no): ");
		  scanf("%d", &again);
		}
	    }
	}
      printf("\n\nTehe you did it.");
